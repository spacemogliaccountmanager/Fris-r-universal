@tailwind base;
@tailwind components;
@tailwind utilities;

/* ── Decorative background gradients ── */
body::before,
body::after {
  content: "";
  position: fixed;
  border-radius: 50%;
  pointer-events: none;
  z-index: 0;
  opacity: 0.45;
}

body::before {
  width: 800px;
  height: 800px;
  top: -200px;
  right: -200px;
  background: radial-gradient(circle, rgba(181, 138, 90, 0.18), transparent 70%);
}

body::after {
  width: 600px;
  height: 600px;
  bottom: 100px;
  left: -180px;
  background: radial-gradient(circle, rgba(181, 138, 90, 0.12), transparent 70%);
}

/* ── Scroll reveal animation ── */
[data-reveal] {
  opacity: 0;
  transform: translateY(18px);
  transition:
    opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
    transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

[data-reveal].is-visible {
  opacity: 1;
  transform: translateY(0);
}

@media (prefers-reduced-motion: reduce) {
  [data-reveal] {
    opacity: 1;
    transform: none;
    transition: none;
  }
}

/* ── Smooth scroll ── */
html {
  scroll-behavior: smooth;
}

/* ── Body loaded state for hero animation ── */
body.is-loaded .hero-image {
  transform: scale(1);
}

.hero-image {
  transform: scale(1.05);
  transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
}
